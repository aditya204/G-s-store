<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView

        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="4dp"
        android:layout_marginStart="8dp"
        android:text="Name the product you want, and we will make sure it will be available Soon. "
        android:textColor="#252525"
        android:textSize="16dp"
        />


    <EditText
        android:theme="@style/Edit_Text"
        android:layout_marginTop="6dp"
        android:layout_marginStart="12dp"
        android:id="@+id/on_demand_product_details"
        android:layout_marginEnd="8dp"
        android:textColor="#696969"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="name,price,weight..." />

    <Button

        android:id="@+id/on_demand_submit"

        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFF"
        android:text="Submit"
        />
</LinearLayout>